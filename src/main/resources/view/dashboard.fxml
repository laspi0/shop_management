<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.shopmanager.controller.DashboardController">
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="appbar">
            <children>
                <Label text="Dashboard" styleClass="title" />
                <Pane HBox.hgrow="ALWAYS" />
                <Button fx:id="toggleThemeBtn" text="Light/Dark" />
            </children>
            <padding><Insets top="12" right="16" bottom="12" left="16"/></padding>
        </HBox>
    </top>
    <center>
        <GridPane hgap="16" vgap="16">
            <padding>
                <Insets top="16" right="16" bottom="16" left="16"/>
            </padding>
            <columnConstraints>
                <ColumnConstraints percentWidth="33" />
                <ColumnConstraints percentWidth="33" />
                <ColumnConstraints percentWidth="34" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints percentHeight="40" />
                <RowConstraints percentHeight="60" />
            </rowConstraints>

            <children>
                <VBox GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="card">
                    <children>
                        <Label fx:id="salesTodayLabel" text="Ventes du jour" />
                    </children>
                    <padding><Insets top="16" right="16" bottom="16" left="16"/></padding>
                </VBox>
                <VBox GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="card">
                    <children>
                        <Label fx:id="revenueLabel" text="Chiffre d'affaires" />
                    </children>
                    <padding><Insets top="16" right="16" bottom="16" left="16"/></padding>
                </VBox>
                <VBox GridPane.rowIndex="0" GridPane.columnIndex="2" styleClass="card">
                    <children>
                        <Label fx:id="outOfStockLabel" text="Produits en rupture" />
                    </children>
                    <padding><Insets top="16" right="16" bottom="16" left="16"/></padding>
                </VBox>

                <HBox GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="3" spacing="12">
                    <children>
                        <Button fx:id="productsBtn" text="Produits" styleClass="nav" />
                        <Button fx:id="customersBtn" text="Clients" styleClass="nav" />
                        <Button fx:id="salesBtn" text="Ventes" styleClass="nav" />
                        <Button fx:id="usersBtn" text="Utilisateurs" styleClass="nav" />
                    </children>
                </HBox>
            </children>
        </GridPane>
    </center>
</BorderPane>
