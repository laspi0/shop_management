<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.shopmanager.controller.DashboardController">
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="appbar">
            <children>
                <Label text="Dashboard" styleClass="title" />
                <Pane HBox.hgrow="ALWAYS" />
                <Button fx:id="toggleThemeBtn" text="Thème" styleClass="ghost" />
            </children>
        </HBox>
    </top>
    <center>
        <VBox spacing="24" styleClass="p-large">
            <children>
                <!-- Stats Cards -->
                <GridPane hgap="20" vgap="20">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="33.33" />
                        <ColumnConstraints percentWidth="33.33" />
                        <ColumnConstraints percentWidth="33.34" />
                    </columnConstraints>
                    <children>
                        <VBox GridPane.columnIndex="0" styleClass="stats-card" spacing="8">
                            <children>
                                <Label fx:id="salesTodayValue" text="24" styleClass="stats-value" />
                                <Label text="Ventes du jour" styleClass="stats-label" />
                                <Label text="+12% vs hier" styleClass="stats-change,positive" />
                            </children>
                        </VBox>
                        <VBox GridPane.columnIndex="1" styleClass="stats-card" spacing="8">
                            <children>
                                <Label fx:id="revenueValue" text="2,450€" styleClass="stats-value" />
                                <Label text="Chiffre d'affaires" styleClass="stats-label" />
                                <Label text="+8% vs hier" styleClass="stats-change,positive" />
                            </children>
                        </VBox>
                        <VBox GridPane.columnIndex="2" styleClass="stats-card" spacing="8">
                            <children>
                                <Label fx:id="outOfStockValue" text="0" styleClass="stats-value" />
                                <Label text="Produits en rupture" styleClass="stats-label" />
                                <Label fx:id="outOfStockLabel" text="" styleClass="stats-change" />
                            </children>
                        </VBox>
                    </children>
                </GridPane>

                <!-- Navigation -->
            <VBox spacing="16">
    <children>
        <Label text="Actions rapides" styleClass="subtitle" />
        <FlowPane hgap="16" vgap="12" alignment="CENTER_LEFT">
            <children>
                <Button fx:id="productsBtn" text="📦 Produits" styleClass="nav" />
                <Button fx:id="customersBtn" text="👥 Clients" styleClass="nav" />
                <Button fx:id="salesBtn" text="💰 Ventes" styleClass="nav" />
                <Button fx:id="usersBtn" text="⚙️ Utilisateurs" styleClass="nav" />
                <Button fx:id="salesHistoryBtn" text="📄 Historique" styleClass="nav" />
            </children>
        </FlowPane>
    </children>
</VBox>
            </children>
        </VBox>
    </center>
</BorderPane>