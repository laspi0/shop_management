<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.shopmanager.controller.SalesHistoryController">
    <top>
        <HBox spacing="20" alignment="CENTER_LEFT" styleClass="appbar">
            <children>
                <Button fx:id="backBtn" text="←" styleClass="button,icon"/>
                <VBox spacing="2">
                    <children>
                        <Label text="Historique des Ventes" styleClass="title"/>
                        <Label text="Consulter les transactions passées" styleClass="caption"/>
                    </children>
                </VBox>
            </children>
        </HBox>
    </top>
    <center>
        <VBox spacing="20" styleClass="p-lg">
            <children>
                <!-- Toolbar -->
                <HBox spacing="12" alignment="CENTER_LEFT" styleClass="card,glass">
                    <padding><Insets top="12" right="16" bottom="12" left="16"/></padding>
                    <children>
                        <Label text="Du:" styleClass="form-label"/>
                        <DatePicker fx:id="fromDate"/>
                        <Label text="Au:" styleClass="form-label"/>
                        <DatePicker fx:id="toDate"/>
                        <Pane HBox.hgrow="ALWAYS"/>
                        <Label text="Client:" styleClass="form-label"/>
                        <ComboBox fx:id="customerFilter" prefWidth="200" promptText="Tous les clients"/>
                        <Button fx:id="resetFiltersBtn" text="Réinitialiser" styleClass="button,ghost"/>
                    </children>
                </HBox>

                <!-- Table -->
                <VBox styleClass="card" VBox.vgrow="ALWAYS">
                    <children>
                        <TableView fx:id="table" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colId" text="ID" prefWidth="80"/>
                                <TableColumn fx:id="colDate" text="Date" prefWidth="180"/>
                                <TableColumn fx:id="colCustomer" text="Client" prefWidth="220"/>
                                <TableColumn fx:id="colItems" text="Articles" prefWidth="100"/>
                                <TableColumn fx:id="colVat" text="TVA" prefWidth="120"/>
                                <TableColumn fx:id="colTotal" text="Total" prefWidth="140"/>
                            </columns>
                        </TableView>
                    </children>
                </VBox>
            </children>
        </VBox>
    </center>
</BorderPane>